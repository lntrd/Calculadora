<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/hori"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/Background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CALCULADORA"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/Texto"/>
    <EditText
        android:id="@+id/visor"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="@dimen/hori"
        android:background="@color/Fundo"
        android:textColor="@color/Texto"
        android:gravity="center"
        android:textSize="25sp"
        android:maxLength="20"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">


        <Button
            android:id="@+id/_7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="7"
            android:textSize="@dimen/txt_botao"
            />
        <Button
            android:id="@+id/_8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="8"
            android:textSize="@dimen/txt_botao"
            />
        <Button
            android:id="@+id/_9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="9"
            android:textSize="@dimen/txt_botao"
            />
        <Button
            android:id="@+id/soma"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+"
            android:textSize="@dimen/txt_botao"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">


        <Button
            android:id="@+id/_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="4"
            android:textSize="@dimen/txt_botao"
            />
        <Button
            android:id="@+id/_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="5"
            android:textSize="@dimen/txt_botao"
            />
        <Button
            android:id="@+id/_6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="6"
            android:textSize="@dimen/txt_botao"
            />
        <Button
            android:id="@+id/subt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="-"
            android:textSize="@dimen/txt_botao"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">


        <Button
            android:id="@+id/_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="@dimen/txt_botao"
            />
        <Button
            android:id="@+id/_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2"
            android:textSize="@dimen/txt_botao"
            />
        <Button
            android:id="@+id/_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="3"
            android:textSize="@dimen/txt_botao"
            />
        <Button
            android:id="@+id/mult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="*"
            android:textSize="@dimen/txt_botao"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">


        <Button
            android:id="@+id/_0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="@dimen/txt_botao"
            />
        <Button
            android:id="@+id/virg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="."
            android:textSize="@dimen/txt_botao"
            />
        <Button
            android:id="@+id/igual"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="="
            android:textSize="@dimen/txt_botao"
            />
        <Button
            android:id="@+id/divi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="/"
            android:textSize="@dimen/txt_botao"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/limpa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:textSize="@dimen/txt_botao"
            android:gravity="center"/>

    </LinearLayout>
</LinearLayout>